+media(any)

  .swiper-slide
    position: relative
    padding-bottom: 152px
    transition: background .2s
    border-radius: 8px
    &.active
      background: #ccc
      &:before
        content: ''
        position: absolute
        top: 0
        bottom: 0
        left: 0
        right: 0
        z-index: 3
        -webkit-backdrop-filter: blur(10px)
        -moz-backdrop-filter: blur(10px)
        backdrop-filter: blur(10px)
        border-radius: 8px

  .swiper-slide-orange
    background: #F18E4B

  .swiper-slide-black
    background: #3E4348

  .swiper-slide-green
    background: #53B56C

  .swiper-slide-orange
  .swiper-slide-green
    .card__icon
      &:before, &:after
        display: none;

  .pagination
    bottom: 0
    display: flex
    justify-content: center
    margin-top: 20px
    .swiper-pagination-bullet
      background: #DADDE5
      width: 6px
      height: 6px
      opacity: 1
      margin: 0 6px !important
      &-active
        background: #000
        width: 6px
        height: 6px


+media(mq.desktop)

  .swiper-container
    margin-right: -30%
    padding-left: 20px

  .swiper-slide
    padding-bottom: 128px


+media(mq.phone)

  .swiper-container
    margin-right: 0
    padding-right: 12px
    padding-left: 12px
    box-sizing: border-box

  .swiper-slide
    padding-bottom: 88px
    border-radius: 4px
