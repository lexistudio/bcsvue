+media(any)

  .card-title
    max-width: 400px

  .card
    color: colors.white
    margin: 32px 0
    &__body
      padding: 34px 32px
      position: relative

    &__title
      font-weight: 600
      font-size: 20px
      line-height: 1.1
      letter-spacing: 0.2px
      text-transform: uppercase

    &__icon
      width: 56px
      height: 56px
      background: colors.white
      border-radius: 100%
      position: absolute
      top: 32px
      right: 32px
      &:before
      &:after
        content: ''
        display: block
        border-radius: 100%
        position: absolute
        top: 0
        left: 0
        width: 56px
        height: 56px
        background: colors.white
      &:before
        margin-left: -16px
        opacity: .3
      &:after
        margin-left: -8px
        opacity: .4
      img
        display: block
        margin: auto
        position: absolute
        top: 0
        bottom: 0
        left: 0
        right: 0
        z-index: 2

    &__group
      display: flex
      margin-top: 64px
      &_item
        width: 100%
        max-width: 200px
      &_title
        font-size: 20px
        line-height: 1.1
        letter-spacing: .2px
        text-transform: uppercase
        font-weight: 600
      &_subTitle
        font-size: 12px
        line-height: 1.3
        letter-spacing: .2px
        text-transform: uppercase
        font-weight: 500
        margin: 6px 0 16px
        max-width: 50%

    &__result
      height: 152px
      background: linear-gradient(90deg, transparent 30%, rgba(255,255,255,.1) 50%, rgba(255,255,255,.5) 100%)
      position: absolute
      bottom: 0
      left: 0
      right: 0
      box-sizing: border-box
      padding: 0 32px
      display: flex
      justify-content: center
      flex-direction: column
      &_title
        font-size: 64px
        line-height: 1
        font-weight: 600
      &_subtitle
        margin-top: 5px
        font-size: 12px
        line-height: 1.3
        letter-spacing: .2px
        text-transform: uppercase
        font-weight: 500


+media(mq.desktop)

  .card-title
    max-width: 500px

  .card
    overflow: hidden
    margin: 24px -16px 24px -20px
    &__body
      padding: 27px 28px

    &__title
      font-size: 18px

    &__icon
      top: 28px
      right: 28px

    &__group
      margin-top: 52px
      &_title
        font-size: 18px
      &_subTitle
        font-size: 11px
        margin-bottom: 7px

    &__result
      height: 128px
      padding: 0 28px
      &_title
        font-size: 48px
      &_subtitle
        font-size: 11px


+media(mq.phone)

  .card
    margin-left: -12px
    margin-right: -12px
    &__body
      padding: 14px 12px 0

    &__title
      font-size: 16px

    &__icon
      top: 12px
      right: 12px
      width: 40px
      height: 40px
      &:before
      &:after
        width: 40px
        height: 40px
      &:before
        margin-left: -12px
      &:after
        margin-left: -6px
      img
        max-width: 60%

    &__group
      display: block
      &_item
        max-width: none
      &_title
        font-size: 16px
      &_subTitle
        font-size: 9px
        margin-top: 2px
        margin-bottom: 21px
        max-width: none

    &__result
      height: 88px
      padding: 0 12px
      &_title
        font-size: 32px
      &_subtitle
        font-size: 9px
